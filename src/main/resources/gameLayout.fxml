<?import com.comp2042.ui.GameOverOverlay?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import com.comp2042.ui.PauseOverlay?>
<?import com.comp2042.ui.DynamicStartScreen?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<Pane fx:controller="com.comp2042.ui.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>

    <StackPane fx:id = "gameBoardContainer">
        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>
            </center>
        </BorderPane>
    </StackPane>

    <Group fx:id="groupNotification" layoutX="220" layoutY="180" />
    <Label fx:id="timerLabel" text="" layoutX="75" layoutY="420" styleClass="scoreValueClass" visible="false"/>

    <AnchorPane fx:id="groupPause" layoutX="0" layoutY="0">
        <PauseOverlay fx:id="pauseScreen" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
    </AnchorPane>


    <VBox layoutX="465" layoutY="80" alignment="CENTER">
        <Label text="SCORE" styleClass="scoreTitleClass" />
        <Label fx:id="scoreValueLabel" styleClass="scoreValueClass" />
    </VBox>

    <VBox layoutX="465" layoutY="140">
        <Label text="Next" styleClass="nextBrickLabel" />
        <StackPane styleClass="nextBrick" prefWidth="140" prefHeight="180">
            <VBox alignment="CENTER" spacing="6" StackPane.alignment="CENTER">
                <GridPane fx:id="nextBrickPanel1" vgap="1" hgap="1" alignment="CENTER"/>
                <GridPane fx:id="nextBrickPanel2" vgap="1" hgap="1" alignment="CENTER"/>
                <GridPane fx:id="nextBrickPanel3" vgap="1" hgap="1" alignment="CENTER"/>
            </VBox>
        </StackPane>
    </VBox>

    <VBox layoutX="49" layoutY="140" spacing="8">
        <Label text="Hold" styleClass="nextBrickLabel" />
        <StackPane styleClass="nextBrick" prefWidth="140" prefHeight="120">
            <GridPane fx:id="holdBrickPanel" vgap="1" hgap="1" alignment="CENTER"/>
        </StackPane>
        <HBox spacing="16" alignment="CENTER">
            <VBox alignment="CENTER" spacing="4">
                <Label text="LINES" styleClass="nextBrickLabel" />
                <Label fx:id="linesValueLabel" styleClass="scoreValueClass" />
            </VBox>
            <VBox alignment="CENTER" spacing="4">
                <Label text="LEVEL" styleClass="nextBrickLabel" />
                <Label fx:id="levelValueLabel" styleClass="scoreValueClass" />
            </VBox>
        </HBox>
    </VBox>

    <VBox layoutX="25" layoutY="80" alignment="CENTER">
        <Label text="HIGH SCORE" styleClass="scoreTitleClass" />
        <Label fx:id="highScoreValueLabel" styleClass="scoreValueClass" />
    </VBox>

    <StackPane fx:id="gameOverOverlay" style="-fx-background-color: rgba(0,0,0,0.6);">
        <GameOverOverlay fx:id="gameOverPanel"/>
    </StackPane>

    <AnchorPane fx:id="startOverlay" layoutX="0" layoutY="0" style="-fx-background-color: rgba(0,0,0,1);">
        <DynamicStartScreen fx:id = "dynamicStartScreen" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        <VBox alignment="CENTER" spacing="16" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <ImageView fx:id="titleImage" preserveRatio="true">
                <image>
                    <Image url="@title_text.png"/>
                </image>
            </ImageView>
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="8">
                    <Button fx:id="playButton" text="Infinite Mode" styleClass="ipad-dark-grey" prefWidth="150" />
                    <Button fx:id="helpButton" text="Controls" styleClass="ipad-dark-grey" prefWidth="150" />
                </VBox>
                <VBox alignment="CENTER" spacing="8">
                    <Button fx:id="raceButton" text="Timed Blitz" styleClass="ipad-dark-grey" prefWidth="150" />
                    <Button fx:id="mineButton" text="Tetro-Mine-O" styleClass="ipad-dark-grey" prefWidth="150" />
                </VBox>
            </HBox>
        </VBox>
        <Label text="By Eashwar" styleClass="creditClass" AnchorPane.rightAnchor="12.0" AnchorPane.bottomAnchor="12.0"/>
    </AnchorPane>

    <AnchorPane fx:id="helpOverlay" layoutX="0" layoutY="0" style="-fx-background-color: rgba(0,0,0,1);" visible="false">
        <VBox alignment="CENTER" spacing="8" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <Label text="Controls" styleClass="nextBrickLabel" />
            <Label text="Left/Right: Arrow keys or A/D" styleClass="helpInfo" />
            <Label text="Rotate: Up Arrow or W" styleClass="helpInfo" />
            <Label text="Soft drop: Down Arrow or S" styleClass="helpInfo" />
            <Label text="Hard drop: Space" styleClass="helpInfo" />
            <Label text="Hold: C" styleClass="helpInfo" />
            <Label text="Pause/Resume: Esc" styleClass="helpInfo" />
            <Label text="New game: N" styleClass="helpInfo" />
            <Button fx:id="closeHelpButton" text="Close" styleClass="ipad-dark-grey" />
        </VBox>

    </AnchorPane>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</Pane>
